{
  "name": "Home Assistant Kubernetes Integration Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.14-bookworm",
  "forwardPorts": [
    8123
  ],
  "portsAttributes": {
    "8123": {
      "label": "Home Assistant",
      "onAutoForward": "notify"
    }
  },
  "containerEnv": {
    "TZ": "Europe/Berlin"
  },
  "mounts": [
    "source=homeassistant-config,target=/config,type=volume"
  ],
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "remoteUser": "vscode",
  "runArgs": [
    "--network=host"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "github.vscode-pull-request-github",
        "ryanluker.vscode-coverage-gutters",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "files.eol": "\n",
        "editor.tabSize": 4,
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.analysis.autoSearchPaths": true,
        "python.analysis.extraPaths": [
          "/config/custom_components",
          "/workspaces/${localWorkspaceFolderBasename}/custom_components"
        ],
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.codeActionsOnSave": {
            "source.organizeImports.ruff": "explicit",
            "source.fixAll.ruff": "explicit"
          }
        },
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "yaml.schemas": {
          "https://json.schemastore.org/github-workflow.json": "file:///workspaces/${localWorkspaceFolderBasename}/.github/workflows/*.{yml,yaml}"
        }
      }
    }
  }
}
