{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Track Python package pins in HA manifest.json",
      "fileMatch": ["custom_components/kubernetes/manifest\\.json$"],
      "matchStrings": [
        "\"(?<depName>[a-zA-Z0-9_-]+)==(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "pypi"
    },
    {
      "customType": "regex",
      "description": "Track Python version in CI workflows",
      "fileMatch": ["\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "python-version:\\s*[\"'](?<currentValue>[0-9.]+)[\"']"
      ],
      "depNameTemplate": "python",
      "datasourceTemplate": "python-version"
    }
  ]
}
